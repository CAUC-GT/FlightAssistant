.card {
  width: 90%;
  margin: auto;
  border-radius: 10rpx;
  margin-top: 40%;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  -moz-box-shadow: 0 1px 5px #d0d0d0;
  -webkit-box-shadow: 0 1px 5px #d0d0d0;
  box-shadow: 0 1px 5px #d0d0d0;
}

.card_title {
  font-size: 38rpx;
  font-weight: 600;
  width: 80%;
  margin-top: 3%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #04396c;
  text-align: center;
  letter-spacing: 5rpx;
}

.card_img {
  height: 80rpx;
  width: 80rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
  margin-top: 20rpx;
}

.row {
  width: 80%;
  margin-top: 3%;
  display: flex;
  flex-direction: row;
}

.card_item {
  padding-top: 2%;
  align-items: center;
  width: 30%;
  font-size: 30rpx;
  text-align: center;
  margin: 30rpx;
  color: #999;
}

.row input {
  border-bottom: 1px solid #679ed2;
}

.btn {
  width: 100%;
  background-color: #0c5aa6;
  color: white;
  border-radius: 98rpx;
  margin-bottom: 8%;
}

.in_row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-bottom: 3%;
}

.in_row>text {
  font-size: 35rpx;
  text-align: right;
}

.picker {
  font-size: 35rpx;
  text-align: left;
  color: #999;
}