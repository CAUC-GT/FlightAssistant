.teachers_banner{
  width:100%;
  height:1250rpx;
  background-size: cover;
  position: relative;
  overflow: hidden;
}
.teachers_b{
  margin-top: 60px;
  position:relative;
  height:100%;
}
#slide {
  margin: 0 auto;
  width: 100%;
  height: 100%;
  position: relative;
}

.container{
  width: 290px;
  height: 620px;
  vertical-align: top;
  align-items: baseline;
}

.h1{
  font-size: 40px;
  margin-left: 10px;
}

.background-img {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

#slide li {
  position: absolute;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: flex-start;
  -webkit-box-align: flex-start;
  -webkit-align-items: flex-start;
  background:#fff;
  overflow:hidden;
  box-shadow: 0 0 15px #427aa8;
}

#slide li img {
  width: 100%;
  height: 100%;
}
.slide_right{
  /* width:440px;*/
  padding: 40px;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  min-width: 0;
}

.arrow .prev,
.arrow .next {
  position: absolute;
  width: 64px;
  z-index: 9;
  font: 700 96px 'simsun';
  opacity: 0.3;
  color: #fff;
  cursor: pointer;
}

.arrow .prev:hover,
.arrow .next:hover {
  color: #00a0e9;
  opacity: .7;
}

.image{
  margin-top: 50%;
  margin-bottom: 20%;
}