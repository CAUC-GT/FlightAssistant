.container{
  width: 100%;
  height: 100%;
}

.container1{
  width: 70%;
  height: 120px;
  background-color: #ff5252;
  margin: 0 auto;
  position: relative;
  top: 200px;
  padding: 5%;
  color: white;
  font: 700 36px 'simsun';
  border-radius: 10px;
  box-shadow: 0px 2px 4px 2px #db7171;
  border-width: 1rpx;
  border-style: solid;
  border-color: #ff5252;
  vertical-align: top;
  align-items: baseline;
}

.container2{
  width: 70%;
  height: 120px;
  background-color: #64b5f6;
  margin: 0 auto;
  position: relative;
  top: 280px;
  padding: 5%;
  color: white;
  font: 700 36px 'simsun';
  border-radius: 10px;
  box-shadow: 0px 2px 4px 2px #7ba6ca;
  border-width: 1rpx;
  border-style: solid;
  border-color: #64b5f6;
  flex-direction: row;
